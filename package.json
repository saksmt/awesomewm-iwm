{
  "name": "awesomewm-iwm-config",
  "private": true,
  "version": "0.0.1",
  "description": "awesomewm IWM config",
  "main": "src/rc.ts",
  "scripts": {
    "build": "tstl",
    "install": "cp ./rc.lua ~/.config/awesome/rc.lua",
    "watch": "tstl --watch",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint '*/**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "eslint '*/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "files": [
    "src/**.ts"
  ],
  "author": "saksmt <smt@saksmt.dev>",
  "license": "MIT",
  "prettier": {
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "proseWrap": "always",
    "tabWidth": 2
  },
  "dependencies": {
    "awesomewm.4.3.ts.d": "0.0.1-rc2",
    "lua-types": "^2.8.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "prettier": "^2.2.0",
    "typescript": "^4.2.2",
    "typescript-to-lua": "^0.37.1"
  }
}
